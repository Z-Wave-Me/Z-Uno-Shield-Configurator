{
  "$schema": "schema.json",
  "associations": [
    {
      "initName": "ZUNO_ASSOCIATION_GROUP_SET_VALUE",
      "title": "BasicSet",
      "actions": [
        {
          "parentId": "ZUNO_ASSOCIATION_GROUP_SET_VALUE",
          "title": "Send Set value command to group",
          "template": "zunoSendToGroupSetValueCommand({1}, {0});",
          "parameters": [
            {
              "title": "groupNumber",
              "type": "byte",
              "userInput": false
            },
            {
              "title": "value",
              "type": "byte",
              "userInput": true
            }
          ]
        }
      ]
    },
    {
      "initName": "ZUNO_ASSOCIATION_GROUP_SET_VALUE_AND_DIM",
      "title": "SwitchMultilevelSet",
      "actions": [
        {
          "parentId": "ZUNO_ASSOCIATION_GROUP_SET_VALUE_AND_DIM",
          "title": "Send Set value command to group",
          "template": "zunoSendToGroupSetValueCommand({1}, {0});",
          "parameters": [
            {
              "title": "groupNumber",
              "type": "byte",
              "userInput": false
            },
            {
              "title": "value",
              "type": "byte",
              "userInput": true
            }
          ]
        },
        {
          "parentId": "ZUNO_ASSOCIATION_GROUP_SET_VALUE_AND_DIM",
          "title": "Send Dim Start command to group",
          "template": "zunoSendToGroupDimmingCommand({1}, {0}, TRUE);",
          "parameters": [
            {
              "title": "groupNumber",
              "type": "byte",
              "userInput": false
            },
            {
              "title": "direction",
              "type": "byte",
              "userInput": true,
              "valueMap": {
                "0": "down",
                "1": "up"
              }
            },
            {
              "title": "start",
              "type": "byte",
              "userInput": true,
              "valueMap": {
                "0": "stop",
                "1": "start"
              }
            }
          ]
        },
        {
          "parentId": "ZUNO_ASSOCIATION_GROUP_SET_VALUE_AND_DIM",
          "title": "Send Dim Stop command to group",
          "template": "zunoSendToGroupDimmingCommand({1}, FALSE, FALSE);",
          "parameters": [
            {
              "title": "groupNumber",
              "type": "byte",
              "userInput": false
            },
            {
              "title": "direction",
              "type": "byte",
              "userInput": true,
              "valueMap": {
                "0": "down",
                "1": "up"
              }
            },
            {
              "title": "start",
              "type": "byte",
              "userInput": true,
              "valueMap": {
                "0": "stop",
                "1": "start"
              }
            }
          ]
        }
      ]
    },
    {
      "initName": "ZUNO_ASSOCIATION_GROUP_SCENE_CONTROL",
      "title": "SceneControl",
      "actions": [
        {
          "parentId": "ZUNO_ASSOCIATION_GROUP_SCENE_CONTROL",
          "title": "Send Scene to group",
          "template": "zunoSendToGroupScene({1}, {0});",
          "parameters": [
            {
              "title": "groupNumber",
              "type": "byte",
              "userInput": false
            },
            {
              "title": "sceneNumber",
              "type": "byte",
              "userInput": true
            }
          ]
        }
      ]
    },
    {
      "initName": "ZUNO_ASSOCIATION_GROUP_DOORLOCK",
      "title": "DoorLockControl",
      "actions": [
        {
          "parentId": "ZUNO_ASSOCIATION_GROUP_DOORLOCK",
          "title": "Send Door Lock command to group",
          "template": "zunoSendToGroupDoorlockControlTiming({1}, {0}, 0);",
          "parameters": [
            {
              "title": "groupNumber",
              "type": "byte",
              "userInput": false
            },
            {
              "title": "action",
              "type": "byte",
              "userInput": true,
              "valueMap": {
                "0": "close",
                "1": "open"
              }
            },
            {
              "title": "timed",
              "type": "uint16_t",
              "userInput": true,
              "default": "0"
            }
          ]
        }
      ]
    }
  ]
}
