{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "associations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "initName": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "parentId": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "template": {
                  "type": "string"
                },
                "parameters": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string"
                      },
                      "userInput": {
                        "type": "boolean"
                      },
                      "valueMap": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      },
                      "default": {
                        "type": "string"
                      }
                    },
                    "required": ["title", "type", "userInput"]
                  }
                }
              },
              "required": ["title", "template", "parameters", "parentId"]
            }
          }
        },
        "required": ["initName", "title", "actions"]
      }
    }
  },
  "required": ["associations"]
}
